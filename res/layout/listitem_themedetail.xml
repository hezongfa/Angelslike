<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp" >

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvDes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:textColor="@color/black_868686"
        android:textSize="13sp" />

    <ImageView
        android:id="@+id/ivCommodity"
        android:layout_width="match_parent"
        android:src="@drawable/img_def_bg"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingTop="5dp" >

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="￥"
            android:textColor="@color/red_f1433c"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btnShowDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/themedetail_commoditydetail_btn_bg"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="查看详情"
            android:textColor="@color/red_f1433c"
            android:textSize="15sp" />
    </RelativeLayout>

</LinearLayout>